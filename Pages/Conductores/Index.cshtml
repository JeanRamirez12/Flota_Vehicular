@page
@model Flota_Vehicular.Pages.Conductores.IndexModel
@{
}
 ViewData["Title"] = "Index Users";
}
<h1>Index Users</h1>

<p>
    <a asp-page="Create" class="btn btn-success">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Conductores[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Conductores[0].Apellido)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Conductores[0].Licencia)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Conductores[0].Telefono)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Conductores[0].Direccion)
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Conductores)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Apellido)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Licencia)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Telefono)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Direccion)
                </td>
                <td>
                    <a asp-page="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                </td>
                <td>
                    <span></span>
                </td>
            </tr>
        }
    </tbody>
</table>
